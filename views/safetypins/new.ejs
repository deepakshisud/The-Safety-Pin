<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">New SafetyPin</h1>
        <form action="/safetypins" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-lable" for="location">Location</label>
                <input class = "form-control" type="text" name="safetypin[location]" id="location" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-lable" for="address">Address</label>
                <input class = "form-control" type="text" name="safetypin[address]" id="address" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-lable" for="safety_index">Safety Index</label>
                <div class="input-group">
                    <span class="input-group-text" id="index-lable">*</span>
                    <input type="text" class="form-control" id = "safety_index" placeholder="0.00" 
                    aria-label="Username" aria-describedby="index-lable" name="safetypin[safety_index]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-lable" for="description">Description</label>
                <textarea class = "form-control" type="text" name="safetypin[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Safety Pin</button>
            </div>
        </form>
        <a href="/safetypins">Back</a>
    </div>
</div>


